<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="rc_car">

  <!-- Dummy root link to handle KDL inertia requirement -->
  <link name="base_footprint"/>

  <joint name="base_footprint_joint" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- Chassis: AMORIL 1/10 RC Car -->
  <link name="base_link">
    <inertial>
      <origin xyz="0 0 0.075"/>
      <mass value="3.0"/>
      <inertia ixx="0.08" ixy="0.0" ixz="0.0" iyy="0.25" iyz="0.0" izz="0.28"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.44 0.27 0.15"/>
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.44 0.27 0.15"/>
      </geometry>
    </collision>
  </link>
  <!-- Wheel links -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
      <material name="black"><color rgba="0.1 0.1 0.1 1"/></material>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
    </collision>
  </link>
  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
    </collision>
  </link>
  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
    </collision>
  </link>
  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <cylinder length="0.04" radius="0.045"/>
      </geometry>
    </collision>
  </link>
  <!-- Wheel joints (front: steerable, rear: fixed) -->
  <!-- Wheelbase: 0.29m, track width: 0.22m -->
  <joint name="front_left_wheel_joint" type="continuous">
    <parent link="steering_link"/>
    <child link="front_left_wheel"/>
    <origin xyz="0.145 0.11 0.045" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="front_right_wheel_joint" type="continuous">
    <parent link="steering_link"/>
    <child link="front_right_wheel"/>
    <origin xyz="0.145 -0.11 0.045" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="rear_left_wheel_joint" type="continuous">
    <parent link="traction_link"/>
    <child link="rear_left_wheel"/>
    <origin xyz="-0.145 0.11 0.045" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="rear_right_wheel_joint" type="continuous">
    <parent link="traction_link"/>
    <child link="rear_right_wheel"/>
    <origin xyz="-0.145 -0.11 0.045" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>

  <link name="steering_link"/>
  <link name="traction_link"/>

  <link name="camera_link">
    <visual>
      <geometry><box size="0.025 0.09 0.025"/></geometry> 
      <material name="blue"><color rgba="0.2 0.2 0.8 1"/></material>
    </visual>
  </link>

  <joint name="steering_joint" type="revolute">
    <parent link="base_link"/>
    <child link="steering_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="1" velocity="1"/>
  </joint>

  <joint name="traction_joint" type="continuous">
    <parent link="base_link"/>
    <child link="traction_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.20 0 0.127" rpy="3.14159 0 0"/>
  </joint>

  <link name="camera_infra1_optical_frame"/>
  <joint name="camera_infra1_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_infra1_optical_frame"/>
    <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/> 
  </joint>

  <link name="camera_infra2_optical_frame"/>
  <joint name="camera_infra2_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_infra2_optical_frame"/>
    <origin xyz="0 -0.050 0" rpy="-1.5708 0 -1.5708"/> 
  </joint>

  <link name="camera_imu_optical_frame"/>
  <joint name="camera_imu_joint" type="fixed">
    <parent link="camera_infra1_optical_frame"/>
    <child link="camera_imu_optical_frame"/> 
    <origin xyz="-0.005 0 0.005" rpy="0 0 0"/>
  </joint>

  <link name="camera_gyro_optical_frame"/>
  <joint name="camera_gyro_joint" type="fixed">
    <parent link="camera_infra1_optical_frame"/>
    <child link="camera_gyro_optical_frame"/> 
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <link name="camera_accel_optical_frame"/>
  <joint name="camera_accel_joint" type="fixed">
    <parent link="camera_infra1_optical_frame"/>
    <child link="camera_accel_optical_frame"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

    <!-- Add camera_depth_optical_frame -->
    <link name="camera_depth_optical_frame"/>
    <joint name="camera_depth_joint" type="fixed">
      <parent link="camera_link"/>
      <child link="camera_depth_optical_frame"/>
      <!-- Standard RealSense orientation: optical frame (Z forward, X right, Y down) -->
      <origin xyz="0 0 0" rpy="-1.5708 0 -1.5708"/>
    </joint>

  <ros2_control name="JetsonOrinPCA9685" type="system">
    <hardware>
      <plugin>pca9685_hardware_interface/Pca9685SystemHardware</plugin>
      <param name="device">/dev/i2c-7</param>
      <param name="address">64</param>
      <param name="frequency">50</param>
    </hardware>
    <joint name="steering_joint">
      <command_interface name="position" />
      <state_interface name="position" />
      <param name="channel">0</param>
      <param name="offset">0.0</param>
      <param name="min_angle">-0.785</param>
      <param name="max_angle">0.785</param>
      <param name="min_pulse_us">1000</param>
      <param name="neutral_pulse_us">1500</param> 
      <param name="max_pulse_us">2000</param>
    </joint>
    <joint name="traction_joint">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
      <state_interface name="position" />
      <param name="channel">1</param>
      <param name="min_pulse_us">1000</param> 
      <param name="neutral_pulse_us">1500</param> 
      <param name="max_pulse_us">2000</param>
    </joint>
  </ros2_control>
</robot>